<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="UglyRockBase">
    <defName>MineableChalk</defName>
    <label>mineable chalk</label>
    <description>A chalk rock, commonly used for drawing due to the softness of the rock. As a building material, it will crumble quickly.</description>
    <graphicData>
      <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <color>(247,247,247)</color>
      <colorTwo>(219,219,219)</colorTwo>
    </graphicData>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
    </statBases>
    <building>
      <isResourceRock>true</isResourceRock>
      <claimable>false</claimable>
      <mineableThing>Chalk</mineableThing>
      <mineableDropChance>1</mineableDropChance>
      <mineableYield>6</mineableYield>
      <mineableScatterCommonality>1.0</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>5~20</mineableScatterLumpSizeRange>
      <isNaturalRock>true</isNaturalRock>
    </building>
  </ThingDef>

  <ThingDef ParentName="ResourceBase">
    <defName>Chalk</defName>
    <label>chalk</label>
    <description>A white rock, with the particular property of being very soft. Gently pushing chalk against any surface will leave a white line behind it</description>
    <graphicData>
      <texPath>Item/Chalk</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>Wood_Drop</soundInteract>
    <soundDrop>Wood_Drop</soundDrop>
    <statBases>
      <Mass>0.6</Mass>
      <MaxHitPoints>100</MaxHitPoints>
      <MarketValue>0.5</MarketValue>
      <SharpDamageMultiplier>0.3</SharpDamageMultiplier>
      <BluntDamageMultiplier>0.6</BluntDamageMultiplier>
      <Beauty>-6</Beauty>
      <ConstructionSpeedFactor>0.4</ConstructionSpeedFactor>
    </statBases>
    <useHitPoints>false</useHitPoints>
    <tradeability>Buyable</tradeability>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <burnableByRecipe>false</burnableByRecipe>
    <minRewardCount>20</minRewardCount>
    <stuffProps>
      <stuffAdjective>chalk</stuffAdjective>
      <commonality>0.05</commonality>
      <constructEffect>ConstructWood</constructEffect>
      <color>(247,247,247)</color>
      <soundImpactStuff>BulletImpact_Wood</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Wood</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Wood</soundMeleeHitBlunt>
      <statFactors>
        <MarketValue>0.2</MarketValue>
        <MaxHitPoints>0.6</MaxHitPoints>
        <Flammability>0</Flammability>
        <WorkToBuild>2.0</WorkToBuild>
        <WorkToMake>0.4</WorkToMake>
        <DoorOpenSpeed>1.3</DoorOpenSpeed>
        <BedRestEffectiveness>0.2</BedRestEffectiveness>
        <MeleeWeapon_CooldownMultiplier>0.90</MeleeWeapon_CooldownMultiplier>
      </statFactors>
    </stuffProps>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
  </ThingDef>
</Defs>