<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <InteractionDef>
    <defName>CultInteraction</defName>
    <label>talked about religion</label>
    <workerClass>OldWorldGods.Interactions.InteractionWorker_CultInteraction</workerClass>
    <symbol>Things/Mote/SpeechSymbols/Chitchat</symbol>
    <initiatorThought>Chitchat</initiatorThought>
    <recipientThought>Chitchat</recipientThought>
    <logRulesInitiator>
      <rulesStrings>
        <li>r_logentry->[INITIATOR_nameDef] and [RECIPIENT_nameDef] [talkedabout] the [verb] of [god].</li>
        <li>r_logentry->[INITIATOR_nameDef] [talkedabout] the [verb] of [god] with [RECIPIENT_nameDef].</li>
        <li>r_logentry(p=0.8)->[INITIATOR_nameDef] [commentedabout] the [verb] of [god] to [RECIPIENT_nameDef].</li>

        <li>talkedabout(p=4)->chatted about</li>
        <li>talkedabout->shared a word about</li>
        <li>talkedabout->spoke about</li>
        <li>talkedabout->gabbed about</li>
        <li>talkedabout->talked about</li>
        <li>talkedabout->joked about</li>
        <li>talkedabout->quipped about</li>

        <li>commentedabout->said something about</li>
        <li>commentedabout->said a word about</li>
        <li>commentedabout->made a comment about</li>
        <li>commentedabout->commented about</li>
        <li>commentedabout->told a joke about</li>

        <li>verb->strength</li>
        <li>verb->holiness</li>
        <li>verb->wisdom</li>
        <li>verb->retribution</li>
        <li>verb->spread</li>

        <li>god->god</li>
        <li>god->the cult</li>
        <li>god->religion</li>
      </rulesStrings>
    </logRulesInitiator>
  </InteractionDef>

  <InteractionDef>
    <defName>CultInsult</defName>
    <label>disagreed about religion</label>
    <workerClass>OldWorldGods.Interactions.InteractionWorker_CultInsult</workerClass>
    <symbol>Things/Mote/SpeechSymbols/Chitchat</symbol>
    <initiatorThought>Slighted</initiatorThought>
    <recipientThought>Slighted</recipientThought>
    <logRulesInitiator>
      <rulesStrings>
        <li>r_logentry->[INITIATOR_nameDef] [talkedabout] the [verb] of [god] with [RECIPIENT_nameDef].</li>
        <li>r_logentry->[INITIATOR_nameDef] [talkedabout] the [verb] of [god] with [RECIPIENT_nameDef].</li>

        <li>talkedabout(p=4)->disagreed about</li>
        <li>talkedabout->argued about</li>
        <li>talkedabout->ranted about</li>
        <li>talkedabout->vented about</li>
        <li>talkedabout->annoyingly joked about</li>
        <li>talkedabout->disparaged</li>

        <li>verb->strength</li>
        <li>verb->holiness</li>
        <li>verb->wisdom</li>
        <li>verb->retribution</li>
        <li>verb->spread</li>

        <li>god->god</li>
        <li>god->the cult</li>
        <li>god->religion</li>
      </rulesStrings>
    </logRulesInitiator>
  </InteractionDef>
</Defs>